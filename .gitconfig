
[user]
    name = Adroaldo de Andrade
    email = adroaldof@gmail.com
[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    autocrlf = input  # true for windows
[push]
    default = simple
[pull]
    rebase = true
[merge]
    conflictsyle = diff3
[color]
    ui = auto
[color "branch"]
    current = yellow
    local = green
    remote = cyan
[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
    whitespace = red reverse
[color "status"]
    added = green
    changed = yellow
    untracked = red